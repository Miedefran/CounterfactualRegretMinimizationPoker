##
## macrodefinitions 
##
LATEX        = pdflatex
BIBTEX       = bibtex
SRC          = main
REMOVE       = *.tex~ *.aux *.glo *.gls *.cb *.dvi *.log *.toc *.lof *.bbl *.blg *.ilg *.cb? *.idx

##
## rules
##
all : 
	$(LATEX)  $(SRC)
	$(BIBTEX) $(SRC)
	$(LATEX)  $(SRC) 
	$(LATEX)  $(SRC)

clean :
	rm -fv $(REMOVE)
